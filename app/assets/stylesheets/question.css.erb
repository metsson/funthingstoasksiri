/* Generated by Font Squirrel (http://www.fontsquirrel.com) */
@font-face {
    font-family: 'marketingscript';
    src: url("<%= asset_url('marketingscript-webfont.eot') %>");
    src: url("<%= asset_url('marketingscript-webfont.eot?#iefix') %>") format('embedded-opentype'),
         url("<%= asset_url('marketingscript-webfont.woff2') %>") format('woff2'),
         url("<%= asset_url('marketingscript-webfont.woff') %>") format('woff'),
         url("<%= asset_url('marketingscript-webfont.tff') %>") format('truetype'),
         url("<%= asset_url('marketingscript-webfont.svg#marketingscript') %>") format('svg');
    font-weight: normal;
    font-style: normal;
}

.container {
    margin: 50px auto;
    max-width: 600px;    
    text-align: center;
    text-shadow: 0 0 1px rgba(0,0,0, .4);
    color: #666;
    min-height: 400px;
}

nav h1 small {
    color: #2a2a2a;
    font-size: .4em;
    padding: 5px;   
    display: block;
}

article {
    margin: 100px auto;
    color: #2a2a2a;
}
.metsson-logo-font {
    font-family: 'marketingscript', 'Marketing Script', cursive;
}

footer {
    position: absolute;
    bottom: 10px;
    right: 10px;
    text-align: right;
    color: rgba(0, 0, 0, .3);
    font-size: .9em;
}

.questions p {
    font-size: 4em;
}

@media screen and (max-width: 480px) { 
    .container {
        padding: 10px;
    }

    nav > h1 {
        font-size: 1.5em;
    }

    footer {
        bottom: -100px;
        font-size: .7em;
    }

    article {
        margin: 40px auto;
    }

    .questions p {
        font-size: 2em;
    }
}